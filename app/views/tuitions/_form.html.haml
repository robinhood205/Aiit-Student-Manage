= form_for @tuition do |f|
  - if @tuition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tuition.errors.count, "error")} prohibited this tuition from being saved:"
      %ul
        - @tuition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student_list_id
    = f.number_field :student_list_id
  .field
    = f.label :transfer_request
    = f.check_box :transfer_request
  .field
    = f.label :exemption_type
    = f.text_field :exemption_type
  .field
    = f.label :loan_amount
    = f.text_field :loan_amount
  .field
    = f.label :scholarship_division
    = f.text_field :scholarship_division
  .field
    = f.label :memo
    = f.text_area :memo
  .actions
    = f.submit 'Save'
